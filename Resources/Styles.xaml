<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Drop shadow effect -->
    <DropShadowEffect x:Key="DropShadow" BlurRadius="18" ShadowDepth="6" Color="#000000" Opacity="0.6" />

    <!-- Basic brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#00B4FF" />
    <SolidColorBrush x:Key="AccentBrush" Color="#7C4DFF" />
    <!-- Overlay and control brushes -->
    <SolidColorBrush x:Key="ControlOverlayBrush" Color="#AA111214" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#22111114" />
    <!-- Theme brushes (can be swapped at runtime) -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF0F1115" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#0F1115" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#141518" />
    <SolidColorBrush x:Key="CardAltBackgroundBrush" Color="#222222" />

    <!-- Button style -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Foreground" Value="#FFF" />
        <Setter Property="Background" Value="#222" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#333" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#00B4FF" BlurRadius="14" Opacity="0.6" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Titlebar small icon button style -->
    <Style x:Key="TitlebarButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#252627" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Floating control panel style (overlay on video) -->
    <Style x:Key="FloatingControlPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ControlOverlayBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="12" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12" ShadowDepth="4" Color="#000000" Opacity="0.6" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ToggleButton style for play/pause -->
    <Style TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="#222" CornerRadius="40" Width="64" Height="64">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#00B4FF" BlurRadius="18" Opacity="0.7" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Slider uses default system template to ensure correct behavior and visuals -->

    <!-- Converters -->
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

</ResourceDictionary>
